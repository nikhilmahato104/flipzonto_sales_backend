<h2 class="salesman-heading">Salesman Admins</h2>
<a href="/" style="background-color: #c5cce0; color: rgb(0, 0, 0); font-size: 1rem; padding: 0.6rem 1.5rem; border: none; border-radius: 8px; text-decoration: none; font-weight: bold;">ðŸ”™ Go to Dashboard</a>
<table class="salesman-table">
    <tr>
        <th>Name</th>
        <th>Actions</th>
    </tr>
    <% salesmen.forEach(salesman => { %>
        <tr>
            <td><%= salesman.salesman_name %></td>
            <td>
                
               <form 
  action="/salesman/delete/<%= salesman._id %>" 
  method="POST" 
  style="display:inline;" 
  onsubmit="return confirmDelete()"
>
    <button type="submit" class="btn abc">Delete</button>
</form>

            </td>
        </tr>
    <% }) %>
</table>

<!-- Add Salesman Button -->
<div style="margin-top: 20px;">
    <a href="/salesman/new" class="btn">Add Salesman</a>
</div>
<script>
  function confirmDelete() {
    const answer = prompt("Security Check: What is 2 + 2?");
    if (answer === null) return false; // Cancelled
    if (parseInt(answer.trim()) === 4) {
      return confirm("Are you sure you want to delete this salesman?");
    } else {
      alert("Incorrect answer. Deletion cancelled.");
      return false;
    }
  }
</script>

